{% extends 'base.html.twig' %}

{% block title %}Ressource{% endblock %}

{% block main %}
    <div class="container my-5">
        <div class="w-75 mx-auto row row-2-cols">
        {# <div class="rounded-circle  mb-3 bg-primary" style="width: 150px; height: 150px;"></div> #}
            <img src="{{ asset('images/ressources/' ~ ressource.filename) }}" alt="{{ ressource.title}}" class="col w-50 img-fluid">
            <div class="ressource-content col">
                <h2 class="ff-montserrat fw-bolder fs-2 mb-0 text-center">{{ ressource.title}}</h2>
                <p class="text-muted small text-center">@{{ ressource.user.username }} | {{ ressource.type}}</p>
                <p>{{ ressource.description ? : "L'auteur n'a pas encore mis de description à la ressource"}}</p>
                <p><strong>Etiquettes :</strong><br>
                    {% for tag in ressource.tags %}
                        <span class="text-muted text-black-subtle">#{{ tag.name }}</span>
                    {% endfor %}
                </p>
                <div class="d-flex  justify-content-start align-items-start gap-2 w-100 mt-1">
                    {% if app.user and app.user.id == ressource.user.id %}
                        <a href="{{ path('app_ressource_edit', {'id': ressource.id}) }}" class="btn btn-primary btn-small"><i class="bi bi-pencil" data-bs-toggle="tooltip" title="Modifier " data-bs-placement="right"></i></a>
                        <a href="{{ path('app_ressource_delete', {'id': ressource.id}) }}" class="btn btn-outline-danger btn-small"><i class="bi bi-trash" data-bs-toggle="tooltip" title="Supprimer" data-bs-placement="right"></i></a>
                    {% endif %}
                    <a href="{{ path('app_home') }}" class="btn btn-outline-primary btn-small">Retourner à l'accueil</a>
                </div>
                 
            </div> 
        </div>
    </div>
     
{% endblock %}
