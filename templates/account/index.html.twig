{% extends 'base.html.twig' %}

{% block title %}Rollscape - Espace Membre{% endblock %}

{% block main %}


  <div class="d-flex flex-column align-items-center p-3 w-75 mx-auto mt-5">
    {# <div class="rounded-circle  mb-3 bg-primary" style="width: 150px; height: 150px;"></div> #}
    <img src="{{ asset('images/profiles/' ~ app.user.picture) }}" alt="Avatar utilisateur" class="rounded-circle mb-3" width="150" height="150">
    <h2 class="ff-montserrat fw-bolder fs-1 mb-0 text-center">{{ app.user.firstname }} {{ app.user.lastname }}</h2>
    <p class="text-muted small">@{{ app.user.username }}</p>
    <p class="text-lg-center w-75 w-md-100 px-md-2 mx-auto">{{ app.user.description }}</p>
    <div class="d-flex justify-content-center gap-2 w-100 mt-1">
      <a href="{{path('app_account_profile')}}" class="btn btn-sm btn-outline-primary">Modifier son profil</a>
      <a href="{{path('app_account_password')}}" class="btn btn-sm btn-outline-primary">Modifier son mot de passe</a>
    </div>
    <div class="d-flex flex-row gap-2 p-3 mt-3">
      <div class="text-center p-2 fs-5">
        <strong>{{app.user.ressources | length}}</strong><br><small>Ressources</small>
      </div>
      <div class="text-center p-2 fs-5">
        <strong>{{app.user.bookmarks | length}}</strong><br><small>Favoris</small>
      </div>
    </div>
  </div>
  {# <section class="container mt-5">
    <h2 class="ff-montserrat fs-4 fw-bold ms-5">Mes derni√®res ressources</h2>
  </section> #}



{% endblock %}
