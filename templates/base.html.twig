<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {# Font Fair Display #}
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@1,400;1,500;1,600;1,700&family=Sora:wght@400;500;600;700&display=swap">

        {# Bootstrap icons #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

		{# Bootstrap CSS #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <aside class="col-md-3 col-lg-2 pe-0 sidebar">
                    <div class="sidebar-logo">
                        <h1 class="logo"><a href="{{path('app_home')}}" class="text-decoration-none text-black fw-bolder">Roll<span class="fw-light">Scape</span></a></h1>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a href="{{path('app_home')}}" class="nav-link {% if app.request.attributes.get('_route') == 'app_home' %}active{% endif %}">
                                <i class="bi bi-house"></i> Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{path('app_ressource_index')}}" class="nav-link">
                                <i class="bi bi-card-list"></i> Mes ressources
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{path('app_ressource_new')}}" class="nav-link">
                                <i class="bi bi-plus-square-fill"></i> Créer une ressource
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="bi bi-collection"></i> Collections
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('app_account') }}" class="nav-link {% if app.request.attributes.get('_route') in ['app_account', 'app_account_password', 'app_account_profile'] %}active{% endif %}"> <i class="bi bi-person-circle"></i> Profil</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item mt-5">
                            <a href="{{ path('admin') }}" class="nav-link"> <i class="bi bi-house-lock "></i> Administration</a>
                        </li>
                        <li class="nav-item">
                            <a href="{{path('app_logout')}}" class="nav-link">
                                <i class="bi bi-box-arrow-left"></i> Se déconnecter
                            </a>
                        </li>
                        {% else %}
                        <li class="nav-item mt-5">
                            <a href="{{path('app_logout')}}" class="nav-link">
                                <i class="bi bi-box-arrow-left"></i> Se déconnecter
                            </a>
                        </li>
                        {% endif %}

                    </ul>
                </aside>
            
                    
                <!-- Main Content -->
                <main class="col-md-9 col-lg-10 main-content">
                <div class="container my-2">
                     {# read and display all flash messages #}
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {{ message }}
                                 <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
                    {% block main %}{% endblock %}
                </main>
            </div>
        </div>
        {# <footer></footer> #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq" crossorigin="anonymous"></script>
    </body>
</html>
